extends baseEmail

block content
  p Hi #{firstName},
  p Verify You Email to activate Account. Please Click on Link to Verify Email Address  or Copy link in browser  #{url}
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Verify Email
  p Links will be Valid for 15 Minutes
